@model RegulusWeb.Models.UserModel
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="jumbotron">
    <form class="form-horizontal" action="/User/EditProfile" method="post" id="frmSignUp">
        <input type="hidden" name="FormType" value="SignUp" />
        <fieldset>
            <legend>Edit Profile</legend>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label"></label>
                    <div class="col-lg-4">
                        <div class="alert alert-dismissible alert-danger">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            @Model.Error
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Ad</label>
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Adınız", @data_bv_notempty = "" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Doğum Tarihi</label>
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = "Gün/Ay/Yıl", @data_bv_notempty = "", @data_bv_date = "", @data_bv_date_format = "DD/MM/YYYY", @data_bv_date_message = "DOB is not valid" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Cinsiyet</label>
                <div class="col-lg-4" style=" margin-top: 7px;">
                    @Html.RadioButtonFor(m => m.Gender, "Male", new { @data_bv_notempty = "" }) Erkek
                    @Html.RadioButtonFor(m => m.Gender, "Female") Kadın
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Bio</label>
                <div class="col-lg-8">
                    @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", @placeholder = "Hakkında...", @data_bv_notempty = "" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>